{# Supprimer toutes les occurrences de l'événement du calendrier #}
{# On utilise un sélecteur CSS pour supprimer tous les éléments avec data-event-id="{{ event.id }}" #}
<turbo-stream action="remove" targets="[data-event-id='{{ event.id }}']">
</turbo-stream>

{# Fermer le modal #}
<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>
