{# Remplacer l'événement dans le calendrier #}
<turbo-stream action="replace" target="event-{{ event.id }}">
    <template>
        {% include '@Calendar/calendar/_event.html.twig' with {event: event} %}
    </template>
</turbo-stream>

{# Fermer le modal #}
<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>
