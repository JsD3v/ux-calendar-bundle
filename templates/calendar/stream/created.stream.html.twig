{# Ajouter l'événement dans la cellule du jour #}
<turbo-stream action="append" target="day-{{ event.startDate|date('Y-m-d') }}">
    <template>
        {% include '@Calendar/calendar/_event.html.twig' with {event: event} %}
    </template>
</turbo-stream>

{# Fermer le modal #}
<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>
