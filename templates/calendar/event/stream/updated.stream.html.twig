<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Événement modifié avec succès !
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </template>
</turbo-stream>

{# Recharger le calendrier pour afficher l'événement mis à jour sur toutes les dates #}
<turbo-stream action="refresh" request-id="{{ 'refresh-' ~ random() }}"></turbo-stream>
