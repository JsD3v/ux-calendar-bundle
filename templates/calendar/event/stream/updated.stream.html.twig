<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>

<turbo-stream action="replace" target="event-{{ event.id }}">
    <template>
        {% include '@Calendar/event/_event.html.twig' with {event: event} %}
    </template>
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Événement modifié avec succès !
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </template>
</turbo-stream>
