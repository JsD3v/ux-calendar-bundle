<turbo-stream action="update" target="event-modal">
    <template></template>
</turbo-stream>

{# Supprimer toutes les occurrences de l'événement avec le sélecteur CSS #}
<turbo-stream action="remove" targets="[data-event-id='{{ eventId }}']">
</turbo-stream>

<turbo-stream action="prepend" target="flash-messages">
    <template>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Événement supprimé avec succès !
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </template>
</turbo-stream>
