<div class="calendar-grid">
    <div class="calendar-header">
        {% set weekDays = ['Lundi', 'Mardi', 'Mercredi', 'Jeudi', 'Vendredi', 'Samedi', 'Dimanche'] %}
        {% for day in weekDays %}
            <div class="calendar-header-day">{{ day }}</div>
        {% endfor %}
    </div>

    <div class="calendar-body">
        {% for week in calendar_data %}
            {% for cell in week %}
                {% if cell is null %}
                    <div class="calendar-cell calendar-cell-empty"></div>
                {% else %}
                    <div class="calendar-cell {{ cell.is_today ? 'calendar-cell-today' : '' }}" 
                         data-date="{{ cell.date|date('Y-m-d') }}"
                         data-calendar-target="day"
                         data-action="click->calendar#selectDay">
                        
                        <div class="calendar-day-number">{{ cell.day }}</div>
                        
                        <div class="calendar-events" id="day-{{ cell.date|date('Y-m-d') }}">
                            {% for event in cell.events %}
                                {% include '@Calendar/event/_event.html.twig' with {event: event} %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        {% endfor %}
    </div>
</div>

<style>
.calendar-grid {
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    overflow: hidden;
}

.calendar-header {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    background: #f8f9fa;
    border-bottom: 2px solid #dee2e6;
}

.calendar-header-day {
    padding: 12px;
    text-align: center;
    font-weight: 600;
    color: #495057;
    border-right: 1px solid #dee2e6;
}

.calendar-header-day:last-child {
    border-right: none;
}

.calendar-body {
    display: grid;
    grid-template-columns: repeat(7, 1fr);
    grid-auto-rows: minmax(120px, auto);
}

.calendar-cell {
    min-height: 120px;
    border-right: 1px solid #dee2e6;
    border-bottom: 1px solid #dee2e6;
    padding: 8px;
    position: relative;
    background: white;
    cursor: pointer;
    transition: background-color 0.2s;
}

.calendar-cell:hover {
    background-color: #f8f9fa;
}

.calendar-cell:nth-child(7n) {
    border-right: none;
}

.calendar-cell-empty {
    background: #f8f9fa;
    cursor: default;
}

.calendar-cell-empty:hover {
    background: #f8f9fa;
}

.calendar-cell-today {
    background-color: #e7f3ff;
}

.calendar-cell-today:hover {
    background-color: #d0e7ff;
}

.calendar-day-number {
    font-size: 14px;
    font-weight: 600;
    color: #212529;
    margin-bottom: 4px;
}

.calendar-cell-today .calendar-day-number {
    color: #0d6efd;
    font-weight: 700;
}

.calendar-events {
    display: flex;
    flex-direction: column;
    gap: 2px;
}
</style>
