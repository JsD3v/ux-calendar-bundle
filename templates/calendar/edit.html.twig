{% extends '@Calendar/calendar/base.html.twig' %}

{% block calendar_title %}Modifier l'événement{% endblock %}

{% block calendar_body %}
<turbo-frame id="event-modal">
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifier l'événement</h5>
                    <a href="{{ path('calendar_index') }}"
                       class="btn-close"
                       data-turbo-frame="event-modal"
                       aria-label="Close"></a>
                </div>

                {{ form_start(form, {
                    'action': path('calendar_event_edit', {id: event.id}),
                    'attr': {
                        'data-turbo': 'true',
                        'data-turbo-frame': 'event-modal'
                    }
                }) }}

                <div class="modal-body">
                    {{ form_row(form.title) }}

                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.startDate) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.endDate) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(form.allDay) }}
                    </div>

                    {{ form_row(form.description) }}

                    {{ form_row(form.color) }}
                </div>

                <div class="modal-footer">
                    <a href="{{ path('calendar_index') }}"
                       class="btn btn-secondary"
                       data-turbo-frame="event-modal">
                        Annuler
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg"></i> Enregistrer
                    </button>
                </div>

                {{ form_end(form) }}

                {# Delete form - outside the update form to avoid nesting #}
                <form method="post"
                      action="{{ path('calendar_event_delete', {id: event.id}) }}"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet événement ?');"
                      class="position-absolute bottom-0 start-0 p-3"
                      data-turbo="true"
                      data-turbo-stream="true">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ event.id) }}">
                    <input type="hidden" name="_method" value="DELETE">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</turbo-frame>
{% endblock %}
