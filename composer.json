{
    "name": "jean-sebastien-christophe/ux-calendar-bundle",
    "description": "A modern calendar bundle for Symfony 7.4/8 with Turbo and Stimulus - no third-party libraries",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony", "calendar", "turbo", "stimulus", "hotwire", "event"],
    "authors": [
        {
            "name": "JeanSebastien Christophe",
            "email": "hello@jschristophe.fr"
        }
    ],
    "require": {
        "php": ">=8.2",
        "symfony/framework-bundle": "^7.4|^8.0",
        "symfony/asset-mapper": "^7.4|^8.0",
        "symfony/ux-turbo": "^2.0",
        "symfony/stimulus-bundle": "^2.0",
        "symfony/form": "^7.4|^8.0",
        "symfony/validator": "^7.4|^8.0",
        "symfony/twig-bundle": "^7.4|^8.0",
        "twig/intl-extra": "^3.0",
        "doctrine/orm": "^2.0|^3.0",
        "doctrine/doctrine-bundle": "^2.0"
    },
    "require-dev": {},
    "suggest": {
        "easycorp/easyadmin-bundle": "For admin panel integration with CRUD controller and dashboard widgets (^4.0)",
        "symfony/ux-chartjs": "For displaying event statistics charts in the dashboard (^2.0)"
    },
    "autoload": {
        "psr-4": {
            "JeanSebastienChristophe\\CalendarBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JeanSebastienChristophe\\CalendarBundle\\Tests\\": "tests/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.0-dev"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "^7.4|^8.0"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
